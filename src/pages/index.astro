---
import {Debug} from 'astro/components';
import {getCollection} from 'astro:content';

// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import CallToAction from '../components/CallToAction.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import ArtworkPreview from '../components/ArtworkPreview.astro';
import ExhibitionPreview from '../components/ExhibitionPreview.astro';

// Page section components
import ContactCTA from '../components/ContactCTA.astro';
import Skills from '../components/Skills.astro';

// Content Fetching: List four most recent work projects from oldest to newest
const projects = (await getCollection('artwork'))
	.sort((a, b) => a.data.publishDate.valueOf() - b.data.publishDate.valueOf())
	.slice(0, 4);
const exhibitions = (await getCollection('exhibition'))
	.sort((a, b) => a.data.publishDate.valueOf() - b.data.publishDate.valueOf())
	.slice(0, 4);

const marketplaces = [
	{
		name: '256art',
		url: 'https://256art.com/artist/jonathan-barbeau-1',
	},
	{
		name: 'fx(hash)',
		url: 'https://www.fxhash.xyz/u/jbarbeau.art',
	},
	{
		name: 'Foundation',
		url: 'https://foundation.app/@Jbarbeau',
	},
	{
		name: 'OBJKT',
		url: 'https://objkt.com/profile/jbarbeau/created',
	},
	{
		name: 'Versum',
		url: 'https://versum.xyz/user/tz1aTHPgADTSw2a7kZe9b1ASpYvNmkc1vNDB/created',
	},
	{
		name: 'Teia.art',
		url: 'https://teia.art/Jbarbeau.art',
	},
];

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<!-- <Debug {exhibitions} /> -->
<BaseLayout>
	<div class='stack gap-5 lg:gap-10'>
		<main class='wrapper stack gap-5 lg:gap-30'>
			<Hero
				topline='New Project!'
				title='Jeu de Ligne'
				tagline="'Jeu de Ligne' is a generative artwork that uses particles, movement, and constraint. As the initial composition glides across the canvas, columns and rows emerge from the particles getting trapped on the margin."
				align='start'
				image='/assets/47.png'
				ratio='16/22'
			/>

			<section class='section with-cta'>
				<div class='section-header stack gap-2 lg:gap-4'>
					<h3>Selected Work</h3>
				</div>

				<div class='gallery'>
					<Grid variant='offset'>
						{
							projects.map((project) => (
								<li>
									<ArtworkPreview data={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class='cta'>
					<CallToAction href='/artwork/'>
						View All
						<Icon icon='arrow-right' size='1.2em' />
					</CallToAction>
				</div>
			</section>

			<section class='section with-background bg-variant'>
				<header class='section-header stack gap-2 lg:gap-4'>
					<h3>Where to find my web3 projects</h3>
					<p>This is a list of marketplaces where you can find and collect my work.</p>
				</header>

				<div class='gallery'>
					<Grid variant='small'>
						{
							marketplaces.map((marketplace) => (
								<li class='mention-card'>
									<a class='web3link' target='_blank' href={marketplace.url}>
										{marketplace.name}
									</a>
								</li>
							))
						}
					</Grid>
				</div>
			</section>
			<section class='section with-cta'>
				<div class='section-header stack gap-2 lg:gap-4'>
					<h3>Current Exhibitions</h3>
				</div>

				<div class='gallery'>
					<Grid>
						{
							exhibitions.map((exhibit) => (
								<li>
									<ExhibitionPreview data={exhibit} />
								</li>
							))
						}
					</Grid>
				</div>
				<div class='cta'>
					<CallToAction href='/exhibition/'>
						View All
						<Icon icon='arrow-right' size='1.2em' />
					</CallToAction>
				</div>
			</section>
		</main>
	</div>

	<ContactCTA />
</BaseLayout>

<style>
	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);

		content: '';
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background: url('/assets/backgrounds/noise.png') top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat, var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
	}

	.mention-card a {
		height: 100%;
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
			gap: 5rem;
		}

		.section.with-cta {
			grid-template-areas: 'header header header cta' 'gallery gallery gallery gallery';
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}

		.gallery {
			grid-area: gallery;
		}

		.cta {
			grid-area: cta;
		}
	}

	/* ====================================================== */
	.web3link {
		text-decoration: none;
	}
	li .web3link {
		font-size: 18px;
	}
	.mention-card .web3link {
		font-size: 18px;
	}
	.mention-card:hover {
		border-color: var(--accent-dark);
	}
	.mention-card {
		display: flex;
		height: 7rem;
		justify-content: center;
		align-items: center;
		text-align: center;
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		color: var(--gray-300);
		background: var(--gradient-subtle);
		box-shadow: var(--shadow-sm);
		transition: 0.2s ease-in-out;
	}

	@media (min-width: 50em) {
		.mention-card {
			border-radius: 1.5rem;
			height: 9.5rem;
		}
	}
</style>
