---
import {Debug} from 'astro/components';
import {marked} from 'marked';
import Icon from '../components/Icon.astro';
interface Props {
	title?: string;
	price?: number;
	is_available?: boolean;
	tagline?: string;
	topline?: string;
	align?: 'start' | 'center';
	baseURL?: string;
	image: {
		url: string;
		alternativeText: string;
	};
	isNested?: boolean;
	label?: string;
	linkURL?: string;
	tag_group?: {
		text: string;
	}[];
}

let {
	align = 'center',
	tagline,
	topline,
	title,
	baseURL,
	image,
	isNested,
	label,
	linkURL,
	tag_group,
	price,
	is_available,
} = Astro.props;

tagline = tagline ? marked(tagline) : '';
let is_available_string = '';
let is_available_class = 'hero-availability';
if (is_available) {
	is_available_string = 'Available';
} else {
	is_available_string = 'SOLD';
	is_available_class = 'hero-availability hero-availability--sold';
}
---

<header class:list={['hero stack gap-4', align]}>
	<div class='hero-container content stack gap-2'>
		<div class='hero-info --desktop'>
			{
				price != 0 && isNested && (
					<>
						<div class='hero-availability-container'>
							<p class={`${is_available_class}`}>{is_available_string}</p>
						</div>
					</>
				)
			}
			{topline && <p class='tagline'>{topline}</p>}
			{title && <h1 class='title'>{title}</h1>}
			{
				price != 0 && isNested && (
					<>
						<div class='hero-price-container'>
							{is_available ? (
								<p class='hero-price'>230$(USD) / 300$(CAD)</p>
							) : (
								<p class='hero-price hero-price--sold'>{price}$</p>
							)}
						</div>
					</>
				)
			}
			{
				// its a nested exhibition
				isNested && tag_group.length > 0 && (
					<>
						<div class='hero-tags-container'>
							<ul class='hero-tags-list'>
								{tag_group.map((tag) => (
									<li class='hero-tags-item'>{tag.text}</li>
								))}
							</ul>
						</div>
						<div class='hero-order-container'>
							<a href='mailto:barbeau.jonathan@gmail.com' class='hero-order-button'>
								Order via email
							</a>
							<a href='https://objkt.com/collection/KT19SFj1tsXQvbLnJHp9Kf9Kn8QzmsM8SB4R' class='hero-order-button'>
								Order via NFT
							</a>
						</div>
					</>
				)
			}
			{
				tagline && (
					<div class='tagline markdown'>
						<Fragment set:html={tagline} />{' '}
					</div>
				)
			}
		</div>
		<div class='hero-image --desktop'>
			{
				image.url && image.url.trim() !== '' && (
					<figure class='hero-figure'>
						<img src={`${baseURL}${image.url}`} alt={image.alternativeText} />

						{isNested && linkURL.length > 0 && label.length > 0 && (
							<div class='hero-render'>
								<a href={linkURL} target='_blank' class='hero-link'>
									Click to render live! <Icon icon='magic' size='1.2em' />
								</a>
							</div>
						)}
					</figure>
				)
			}
		</div>
		<div class='hero-info --mobile'>
			{
				price != 0 && isNested && (
					<>
						<div class='hero-availability-container'>
							<p class={`${is_available_class}`}>{is_available_string}</p>
						</div>
					</>
				)
			}
			{topline && <p class='tagline'>{topline}</p>}
			{title && <h1 class='title'>{title}</h1>}

			{
				price != 0 && isNested && (
					<>
						<div class='hero-price-container'>
							{is_available ? (
								<p class='hero-price'>230$(USD) / 300$(CAD)</p>
							) : (
								<p class='hero-price hero-price--sold'>{price}$</p>
							)}
						</div>
					</>
				)
			}
			{
				// its a nested exhibition
				isNested && tag_group.length > 0 && (
					<>
						<div class='hero-tags-container'>
							<ul class='hero-tags-list'>
								{tag_group.map((tag) => (
									<li class='hero-tags-item'>{tag.text}</li>
								))}
							</ul>
						</div>
						<div class='hero-order-container'>
							<a href='mailto:barbeau.jonathan@gmail.com' class='hero-order-button'>
								Order via email
							</a>
							<a href='https://objkt.com/collection/KT19SFj1tsXQvbLnJHp9Kf9Kn8QzmsM8SB4R' class='hero-order-button'>
								Order via NFT
							</a>
						</div>
					</>
				)
			}
			<div class='hero-image --mobile'>
				{
					image.url && image.url.trim() !== '' && (
						<figure class='hero-figure'>
							<img src={`${baseURL}${image.url}`} alt={image.alternativeText} />

							{isNested && linkURL.length > 0 && label.length > 0 && (
								<div class='hero-render'>
									<a href={linkURL} target='_blank' class='hero-link'>
										{label} <Icon icon='magic' size='1.2em' />
									</a>
								</div>
							)}
						</figure>
					)
				}
			</div>
			{
				tagline && (
					<div class='tagline markdown'>
						<Fragment set:html={tagline} />{' '}
					</div>
				)
			}
		</div>
	</div>
	<slot />
</header>

<style>
	header {
		padding-bottom: 2.5rem;
		border-bottom: 1px solid var(--gray-800);
	}

	.hero {
		font-size: var(--text-md);
		text-align: center;
	}
	.hero-availability-container {
		border-radius: 99rem;
		padding: 0.5em 0;
		width: fit-content;
		display: block;
	}
	.hero-availability {
		color: rgb(11, 173, 135);
		width: auto;
		display: block;
	}
	.hero-availability--sold {
		color: rgb(255, 0, 0);
	}
	.hero-price-container {
		margin-top: 0.15em;
		margin-bottom: 1em;
		display: flex;
		align-items: center;
		justify-content: flex-start;
	}

	.hero-price {
		color: var(--gray-0);
		font-size: 22px;
	}
	.hero-price--sold {
		color: var(--gray-0);
		font-size: 24px;
		text-decoration: line-through;
	}
	.hero-tags-list {
		list-style: none;
		display: flex;
		justify-content: start;
		align-items: center;
		border: 1px solid var(--gray-200);
		width: fit-content;
		padding-left: 0;
	}
	.hero-tags-item {
		padding: 0.5em 1em;
		font-size: 16px;
		&:not(:last-child) {
			border-right: 1px solid var(--gray-200);
		}
	}
	.hero-info.--desktop {
		display: none;
	}
	.hero-container {
		display: flex;
		flex-direction: column;
		margin-top: 0em;
	}
	.hero-image {
		position: relative;
		margin-top: 2em;
	}
	.hero-image.--desktop {
		display: none;
	}
	.hero-image :global(img) {
		border-radius: 1.5rem;
		box-shadow: var(--shadow-sm);
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
	}
	.title {
		margin-bottom: 0.5em;
	}
	.title,
	.tagline {
		margin-inline: auto;
	}

	.tagline {
		margin: 1em 0;
		text-align: left;
	}
	.tagline p {
		margin-bottom: 1em;
		text-align: left;
	}

	.title {
		font-size: var(--text-2xl);
		color: var(--gray-0);
		margin-bottom: 0.5em;
		text-align: left;
	}

	.hero-tags-container {
		display: flex;
		flex-direction: column;
		margin: 1rem 0;
		justify-content: space-between;
		align-items: flex-start;
	}

	.hero-render {
		position: absolute;
		top: 20px;
		left: 20px;
	}
	.hero-link,
	.hero-order-button {
		position: relative;
		display: flex;
		place-content: center;
		text-align: center;
		padding: 0.56em 2em;
		gap: 0.8em;
		color: var(--accent-text-over);
		text-decoration: none;
		line-height: 1.1;
		border-radius: 999rem;
		overflow: hidden;
		background: var(--gradient-accent-orange);
		box-shadow: var(--shadow-md);
		white-space: nowrap;
		font-size: var(--text-base);
	}
	.hero-order-container {
		display: flex;
	}
	.hero-order-button {
		background: var(--accent-regular);
		display: block;
		width: fit-content;
		margin-right: 0.5em;
		padding: 1em 2em;
	}

	/* Overlay for hover effects. */
	.hero-link::after {
		content: '';
		position: absolute;
		inset: 0;
		pointer-events: none;
		transition: background-color var(--theme-transition);
		mix-blend-mode: overlay;
	}

	.hero-link:focus::after,
	.hero-link:hover::after {
		background-color: hsla(var(--gray-999-basis), 0.3);
	}

	@media (min-width: 768px) {
		.hero-link {
			font-size: var(--text-lg);
		}
	}

	@media (min-width: 1280px) {
		.hero {
			font-size: var(--text-lg);
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
		}
		.hero-price {
			color: var(--gray-0);
			font-size: 24px;
			font-weight: 500;
		}

		.hero-container {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
		}

		.hero-image {
			margin-top: 0;
			margin-left: 1em;
			flex: 1;
			align-items: flex-start;
			height: 100%;
			justify-content: flex-end;
			align-self: baseline;
		}
		.hero-image.--desktop {
			display: flex;
		}

		.hero-figure {
			width: 90%;
			position: relative;
		}
		.hero-info.--desktop {
			flex: 1;
			align-self: flex-start;
			display: block;
		}
		.hero-info.--mobile {
			display: none;
		}
		.hero-link {
			padding: 1.125rem 2.5rem;
			font-size: var(--text-xl);
		}

		.hero-order-button {
			margin-right: 0.5em;
		}
		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-4xl);
			margin-bottom: 0.25em;
		}
		.hero-tags-container {
			flex-direction: row;
			align-items: flex-start;
		}
	}
</style>
