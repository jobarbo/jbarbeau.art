---
interface Props {
	title?: string;
	tagline?: string;
	topline?: string;
	align?: 'start' | 'center';
}

const {align = 'center', tagline, topline, title} = Astro.props;
---

<header class:list={['hero stack gap-4', align]}>
	<div class='hero-container stack gap-2'>
		{title && <h1 class='title'>{title}</h1>}
		{tagline && <p class='tagline'>{tagline}</p>}
	</div>
	<slot />
</header>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-2xl);
		color: var(--gray-0);
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}
	}
</style>
