---
interface Props {
	title: string;
	link: string;
	pubDate: string;
	excerpt: string;
	slug: string;
}

const {title, link, pubDate, excerpt, slug} = Astro.props;

// Format the date
const date = new Date(pubDate);
const formattedDate = date.toLocaleDateString("en-US", {
	year: "numeric",
	month: "long",
	day: "numeric",
});
---

<article class='mb-8 border-b border-gray-200 pb-8'>
	<h2 class='text-2xl font-bold mb-2'>
		<a href={`/blog/${slug}`} class='text-blue-600 hover:text-blue-800'>
			{title}
		</a>
	</h2>
	<p class='text-gray-600 mb-4'>{formattedDate}</p>
	<div class='prose max-w-none mb-4'>
		<p>{excerpt}</p>
	</div>
	<div class='flex gap-4'>
		<a href={`/blog/${slug}`} class='inline-block text-blue-600 hover:text-blue-800'> Read full post → </a>
		<a href={link} target='_blank' rel='noopener noreferrer' class='inline-block text-gray-600 hover:text-gray-800'> View on Substack ↗ </a>
	</div>
</article>
