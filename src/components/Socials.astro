---
import Icon, {Props as IconProps} from './Icon.astro';
/** Main menu items */

/** Icon links to social media â€” edit these with links to your profiles! */
const iconLinks: {label: string; href: string; icon: IconProps['icon']}[] = [
	{label: 'Email', href: 'mailto:barbeau.jonathan@gmail.com', icon: 'email'},
	{label: 'Twitter', href: 'https://twitter.com/JBarbeau_Art', icon: 'twitter-logo'},
	{label: 'Instagram', href: 'https://www.instagram.com/jbarbeau.art/', icon: 'instagram'},
	{label: 'Facebook', href: 'https://www.facebook.com/barbeaucodeart', icon: 'facebook'},
	{label: 'Twitch', href: 'https://twitch.tv/jbarbeau_art', icon: 'twitch-logo'},
	{label: 'Tiktok', href: 'https://www.tiktok.com/@jbarbeau.art', icon: 'tiktok'},
	{label: 'GitHub', href: 'https://github.com/jobarbo', icon: 'github-logo'},
	{label: 'YouTube', href: 'https://www.youtube.com/@JoBarbo', icon: 'youtube-logo'},
	{label: 'linktree', href: 'https://linktr.ee/jobarbo', icon: 'linktree-logo'},
];
---

<div class='menu-footer'>
	<div class='socials'>
		{
			iconLinks.map(({href, icon, label}) => (
				<a target='_blank' href={href} class='social'>
					<span class='sr-only'>{label}</span>
					<Icon icon={icon} />
				</a>
			))
		}
	</div>
</div>

<style>
	.menu-footer {
		--icon-size: var(--text-2xl);
		--icon-padding: 0.5rem;

		display: flex;
		justify-content: space-between;
		gap: 0.75rem;
		padding: 1.5rem 2rem 1.5rem 1.5rem;
		background-color: var(--gray-999);
		border-radius: 0 0 0.75rem 0.75rem;
		box-shadow: var(--shadow-lg);
	}

	.socials {
		display: flex;
		flex-wrap: wrap;
		gap: 0.625rem;
		font-size: var(--icon-size);
	}

	.social {
		display: flex;
		padding: var(--icon-padding);
		text-decoration: none;
		color: var(--accent-dark);
		transition: color var(--theme-transition);
	}

	.social:hover,
	.social:focus {
		color: var(--accent-text-over);
	}

	@media (min-width: 50em) {
		.menu-footer {
			--icon-padding: 0.375rem;

			justify-self: flex-end;
			align-items: center;
			padding: 0;
			background-color: transparent;
			box-shadow: none;
		}

		.socials {
			display: none;
		}
	}

	@media (min-width: 60em) {
		.socials {
			display: flex;
			gap: 0;
		}
	}
</style>
